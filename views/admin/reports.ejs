<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Admin — Reports</title>
  <link rel="stylesheet" href="/public/styles.css" />
</head>
<body>
  <div class="container narrow">
    <section class="panel">

    <div class="admin-head">
      <div>
        <h1 class="proj-title" style="margin-bottom:6px">Reports</h1>
        <div class="admin-sub muted">Lightweight totals (no cookies, no third-party scripts).</div>
      </div>
      <div class="ctas" style="margin-top:0">
        <a class="btn" href="/admin">← Back to Admin</a>
      </div>
    </div>

    <div class="card" style="margin-top:14px">
      <div class="admin-toolbar" style="justify-content:space-between">
        <div>
          <div style="font-weight:700">Page views</div>
          <div class="muted" style="margin-top:6px">Home: <b><%= homeViews %></b> · Item pages: <b><%= itemViewsTotal %></b></div>
        </div>
      </div>
    </div>

    <div class="card" style="margin-top:12px">
      <div style="font-weight:700;margin-bottom:10px">Top item pages</div>
      <% if (!topItems || topItems.length === 0) { %>
        <div class="muted">No data yet.</div>
      <% } else { %>
        <div class="admin-list" style="margin-top:0">
          <% topItems.forEach((r, idx) => { %>
            <div class="admin-row" style="grid-template-columns: 1fr auto;">
              <a class="admin-main" href="/item/<%= encodeURIComponent(r.slug) %>" target="_blank" rel="noopener">
                <div class="meta">
                  <span class="pill">#<%= idx + 1 %></span>
                  <span class="dotsep">·</span>
                  <span class="muted"><%= r.slug %></span>
                </div>
                <div class="title"><%= r.title %></div>
              </a>
              <div class="admin-actions">
                <span class="pill"><%= r.count %> views</span>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>

    <div class="card" style="margin-top:12px">
      <div style="font-weight:700;margin-bottom:10px">Outbound clicks</div>
      <div class="muted" style="margin-bottom:10px">Total outbound clicks recorded: <b><%= outboundTotal %></b></div>

      <% if (!topOutbound || topOutbound.length === 0) { %>
        <div class="muted">No data yet.</div>
      <% } else { %>
        <div class="admin-list" style="margin-top:0">
          <% topOutbound.forEach((r, idx) => { %>
            <div class="admin-row" style="grid-template-columns: 1fr auto;">
              <div class="admin-main" style="cursor:default">
                <div class="meta">
                  <span class="pill">#<%= idx + 1 %></span>
                  <% if (r.source) { %><span class="pill"><%= r.source %></span><% } %>
                  <% if (r.slug) { %>
                    <span class="dotsep">·</span>
                    <span class="muted">slug: <%= r.slug %></span>
                  <% } %>
                </div>
                <div class="title" style="font-size:14px">
                  <a class="underline" href="<%= r.url %>" target="_blank" rel="noreferrer"><%= r.url %></a>
                </div>
              </div>
              <div class="admin-actions">
                <span class="pill"><%= r.count %> clicks</span>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>

    <div class="card" style="margin-top:12px">
      <div style="font-weight:700;margin-bottom:10px">Section nav clicks</div>
      <% if (!navClicks || navClicks.length === 0) { %>
        <div class="muted">No data yet.</div>
      <% } else { %>
        <div class="admin-list" style="margin-top:0">
          <% navClicks.forEach(r => { %>
            <div class="admin-row" style="grid-template-columns: 1fr auto;">
              <div class="admin-main" style="cursor:default">
                <div class="title"><%= r.section %></div>
                <div class="desc muted"><%= r.href || '' %></div>
              </div>
              <div class="admin-actions">
                <span class="pill"><%= r.count %></span>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>

    </section>
  </div>
</body>
</html>
