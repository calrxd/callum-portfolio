<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Admin login</title>
  <link rel="stylesheet" href="/public/styles.css" />
</head>
<body>
  <div class="container">
    <h1 class="proj-title">Admin login</h1>
    <p class="sub">Enter the admin password.</p>
    <% if (error) { %><p style="color:#b00020"><%= error %></p><% } %>
    <form method="post" action="/auth/login">
      <input type="hidden" name="next" value="<%= next %>" />
      <div style="display:flex;gap:10px;max-width:420px">
        <input name="password" type="password" placeholder="Password" style="flex:1;padding:12px;border-radius:12px;border:1px solid #e8eeef" />
        <button class="btn primary" type="submit">Login</button>
      </div>
    </form>
  </div>
</body>
</html>
